<%= render('layouts/errors', :object => @review) %>

<%= form_for [@product, @review] do |f| %>
  <%= f.label :author %>
  <%= f.text_field :author %>
  <%= f.label :content %>
  <%= f.text_area :content %>
  1<%= f.radio_button :rating, '1' %>
  2<%= f.radio_button :rating, '2' %>
  3<%= f.radio_button :rating, '3' %>
  4<%= f.radio_button :rating, '4' %>
  5<%= f.radio_button :rating, '5' %>
  <p><%= f.submit %></p>
<% end %>
